    "@wagmi/cli": "0.1.15",
    "@wagmi/core": "^0.10.9",
    "@xstate/react": "^3.2.2",
    "classnames": "^2.3.2",
    "copy-to-clipboard": "^3.3.3",
    "ethers": "^5.7.2",
    "graphql-request": "5.1.0",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "next": "^13.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "swr": "^2.1.5",
